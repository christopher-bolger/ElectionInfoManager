<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="electionInfoManager.view.mainController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <MenuBar fx:id="menuBar" prefHeight="25.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem fx:id="newManager" mnemonicParsing="false" onAction="#newManager" text="New" />
                        <MenuItem fx:id="loadManager" mnemonicParsing="false" onAction="#loadManager" text="Load" />
                    <MenuItem fx:id="saveManager" mnemonicParsing="false" onAction="#saveManager" text="Save" />
                        <MenuItem fx:id="closeWindow" mnemonicParsing="false" onAction="#closeWindow" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteSelectedEntity" text="Delete" />
                        <MenuItem fx:id="editButton" mnemonicParsing="false" onAction="#editSelectedEntity" text="Edit" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Sort">
                     <items>
                        <Menu mnemonicParsing="false" text="Politicians">
                          <items>
                              <MenuItem mnemonicParsing="false" onAction="#sortByNameASC" text="Name ASC" />
                              <MenuItem mnemonicParsing="false" onAction="#sortByNameDESC" text="Name DESC" />
                          </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Elections">
                           <items>
                              <MenuItem mnemonicParsing="false" onAction="#sortByTypeASC" text="Type ASC" />
                              <MenuItem mnemonicParsing="false" onAction="#sortByTypeDESC" text="Type DESC" />
                           </items>
                        </Menu>
                     </items>
                  </Menu>
              </menus>
            </MenuBar>
            <HBox fx:id="content" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </children>
</AnchorPane>
